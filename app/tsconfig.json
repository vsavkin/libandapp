{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "build",
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "mylib": ["../lib/dist/mylib.d.ts"]
    }
  },
  "angularCompilerOptions": {
    "genDir": "build",
    "skipMetadataEmit" : true
  },
  "files": [
    "main.ts"
  ]
}
