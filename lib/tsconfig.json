{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "build",
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,

    "flatModuleOutFile": "mylib.js",
    "flatModuleId": "mylib"
  },
  "files": [
    "index.ts"
  ]
}
